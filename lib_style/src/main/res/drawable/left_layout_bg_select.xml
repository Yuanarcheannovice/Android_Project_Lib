<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">
        <shape>
            <stroke android:width="3dp" android:color="@color/main_yellow_sub_color" />
            <solid android:color="@color/transparent" />
        </shape>
    </item>

    <item android:state_selected="true" android:drawable="@color/main_yellow_sub_color"/>

    <item android:state_checked="true" android:drawable="@color/main_yellow_sub_color"/>


    <item android:drawable="@color/transparent"/>

</selector>